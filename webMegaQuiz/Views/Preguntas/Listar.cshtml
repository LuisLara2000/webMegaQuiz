@model IEnumerable<PreguntaModels>

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Preguntas</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <a asp-action="ObtenerUnaPregunta" asp-route-id=8 class="btn btn-outline-success btn-sm">Empezar</a>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <!-- El encabezado de cada columna -->
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.idPregunta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.pregunta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.estado)
                                    </th>
                                </tr>
                            </thead>
                            <!-- La informacion de cada fila -->
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.idPregunta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.pregunta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.estado)
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        MegaQuiz
    </div>
</div>



