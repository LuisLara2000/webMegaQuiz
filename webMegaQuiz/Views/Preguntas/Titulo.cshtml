@model IEnumerable<PreguntaModels>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/webMegaQuiz.styles.css" asp-append-version="true" />
        <meta name="viewport" content="width=device-width" />
        <title>Titulo</title>
    </head>
    <body onload="ocultar('opciones','modoMenu')">
        <div id="cTitulo">
            <div id="titulo">
                <img src="~/megamanLogo.png" />
            </div>
        </div>
        <div id="cOpciones" >     
            <div id="modoMenu">
                <div id="opcionesSeleccionaModo">
                    <p>Selecciona un modo</p>
                </div>
                <div id="opcionesModo">
                    <button id="bModo3" onclick="inicializarModo(3);desOcultar('opciones');seleccionarBotonModo('bModo3')" class="btn btn-primary">3 preguntas</button>
                    <button id="bModo5" onclick="inicializarModo(5);desOcultar('opciones');seleccionarBotonModo('bModo5')" class="btn btn-primary">5 preguntas</button>
                    <button id="bModo10" onclick="inicializarModo(10);desOcultar('opciones');seleccionarBotonModo('bModo10')" class="btn btn-primary">10 preguntas</button>
                </div>
            </div>

            <div id="opciones">
                <div id="opcionesSeleccionaModo">
                    <p>¿Estas listo?</p>
                </div>
                <form>
                    <div hidden>
                        <p>id:<input name="sig" id="preId">@ViewBag.sig</input></p>
                        <p>total:<h1 id="preTotal"></h1></p>
                        <p>actual:<h1 id="preActual"></h1></p>
                    </div>
                    <button id="bEmpezar" asp-action="ObtenerUnaPregunta" class="btn btn-primary">¡ Vamos !</button>
                </form>
            </div>
           
        </div>

        <!--aqui estan las preguntas, pero no se muestran en pantalla-->
        <div hidden>

            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <!-- El encabezado de cada columna -->
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idPregunta)
                        </th>
                    </tr>
                </thead>
                <!-- La informacion de cada fila -->
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="idPre">
                                @Html.DisplayFor(modelItem => item.idPregunta)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <script src="~/js/site.js"></script>
    </body>
</html>
